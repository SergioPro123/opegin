                                    <div class='form-group col-md-6'>
                                        <label class='' for='responsible_name'>Nombre completo</label>
                                        <input
                                            type='text'
                                            name='responsible_name'
                                            placeholder='Nombre del responsable'
                                            class='form-control'
                                            id='responsible_name'
                                            value='YURITZA MENDOZA GALVAN'
                                            required
                                        />
                                    </div>
                                    <div class='form-group col-md-6'>
                                        <label class='' for='responsible_position'>Cargo</label>
